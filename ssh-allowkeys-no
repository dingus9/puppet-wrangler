host=$1;
ssh_user=root;
id_cmd='';

ssh $id_cmd $ssh_user@$host 'sed -i "s/#PubkeyAuthentication yes/PubkeyAuthentication yes/" /etc/ssh/sshd_config';

ssh $id_cmd $ssh_user@$host 'sed -i "s/PasswordAuthentication yes/PasswordAuthentication no/" /etc/ssh/sshd_config';

ssh $id_cmd $ssh_user@$host 'sed -i "s/#PasswordAuthentication/PasswordAuthentication/" /etc/ssh/sshd_config';
 
